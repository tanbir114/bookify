<%- include('../includes/head.ejs') %>
    <style>
        .ul-list{
            margin: 0;
            padding: 20px;
            position: absolute;
            top: 15%;
            left: 25%;
            transform: translate(-2%, -5%);
            width: 800px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 15px 50px rgba(0,0,0,.2);
        }
        .h1-list{
            margin: 0;
            padding: 0;
            font-size: 24px;
            border-bottom: 1px solid rgba(0,0,0,.2);
        }
        .ul-list .li-list{
            display: relative;
            list-style: none;
            padding: 4px;
            border-radius: 4px;
            border-bottom: 1px solid rgba(0,0,0,.1);
        }
        .ul-list .li-list .a-list{
            color: #262626;
            text-decoration: none;
            display: block;
            padding-left: 150px;
        }
        .ul-list .li-list .date{
            position: absolute;
            top: 55;
            left: 25;
            width: 60px;
            text-align: center;
        }
        .ul-list .li-list .date:before{
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 0;
            border-top: 22px solid #e2574c;
            border-bottom: 50px solid #e4e7e4;
            z-index: 1;
            border-radius: 5px;
        }
        .ul-list .li-list .date h3{
            position: relative;
            z-index:2;
            margin-top: -6px;
            font-size: 16px;
            color: #fff;
            line-height: 36px;
        }
        .ul-list .li-list .date .h3-list span{
            font-size: 36px;
            color: #324d5b; 
        }
        .ul-list .li-list .date .p-list{
            font-size: 18px;
            
        }
        .h5-list{
            font-size: 24px;
        }
    </style>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class = "ul-list">
                    <h1 class="h1-list">Orders: </h1>
                    <% orders.forEach(order => { %>
                        <li class="li-list">
                            <div class="date">
                                <h3 class="h3-list">Mar<br><span>06</span></h3>
                            </div>
                            <a href="#" class="a-list">
                                <h5 class="h5-list">Order No: <%= order.id %></h5>
                                <% order.details.forEach(product => { %>
                                    <p class="p-list"><b>Book Name:</b> &nbsp;&nbsp;<%= product.name %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Quantity Sold:</b>&nbsp;&nbsp;<%= product.quantity %> </p>
                                <% }); %>
                            </a>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>