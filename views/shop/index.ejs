<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">

<style>
    a {
        color: inherit;
        text-decoration: none;
        cursor: pointer;
    }

    .grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .product-item {
        width: 300px; /* Adjust width as needed */
        margin: 20px;
        background-color: #f5f5f5;
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

    .product-item:hover {
        transform: scale(1.05); /* Add a subtle hover effect */
    }

    .card__header {
        padding: 15px;
        text-align: center;
        /* background-color: #333; */
        color: #d31818;
        border-bottom: 1px solid #ddd;
    }

    .shop__image {
        height: 200px; /* Adjust height as needed */
        width: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .shop__image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card__content {
        padding: 15px;
    }

    .product__description {
        color: #333; /* Choose a color for the description text */
    }
</style>

</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (shops.length > 0) { %>
            <div class="grid">
                <% for (let shop of shops) { %>
                   <a href="/shops/<%= shop.id %> ">
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%= shop.title %></h1>
                            </header>
                            <div class="shop__image">
                                <img src="<%= shop.imageUrl %>"
                                    alt="<%= shop.title %>">
                            </div>
                            <div class="card__content">
                                <p class="product__description"><%= shop.description %></p>
                            </div>
                        </article>
                   </a>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>
